{
	"name": "webpack-hot-socketio",
	"version": "1.0.0",
	"description": "Webpack hot reloading you can serve your own server, and used socket.io server to hot reload",
	"engines": {
		"node": "^10"
	},
	"keywords": [
		"webpack",
		"hmr",
		"hot",
		"module",
		"reloading",
		"hot-reloading",
		"middleware",
		"socket.io"
	],
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/gcaaa31928/webpack-hot-socketio.git"
	},
	"author": "Red Huang <gcaaa31928@gmail.com>",
	"license": "MIT",
	"scripts": {
		"test": "mocha --exit",
		"test:coverage": "nyc mocha --exit --timeout=3000",
		"ci:test": "nyc --reporter=html --reporter=text mocha --exit",
		"ci:coverage": "nyc report --reporter=text-lcov | coveralls",
		"lint": "eslint . --max-warnings 0"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js}": [
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {
		"ansi-html": "^0.0.7",
		"html-entities": "^1.2.1",
		"query-string": "^6.8.2",
		"socket.io-client": "^2.2.0",
		"strip-ansi": "^5.2.0"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.2",
		"chai": "^4.2.0",
		"coveralls": "^3.0.6",
		"eslint": "~6.1.0",
		"eslint-plugin-prettier": "^3.1.0",
		"jsdom": "^15.1.1",
		"karma": "^4.2.0",
		"karma-chrome-launcher": "^3.1.0",
		"karma-mocha": "^1.3.0",
		"lint-staged": "^9.2.3",
		"mocha": "^6.2.0",
		"nyc": "^14.1.1",
		"prettier": "^1.18.2",
		"puppeteer": "^1.19.0",
		"sinon": "^7.4.1",
		"socket.io": "^2.2.0",
		"webpack": "^4.39.1",
		"yorkie": "^2.0.0"
	}
}
